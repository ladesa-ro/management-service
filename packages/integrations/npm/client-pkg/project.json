{
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "tags": ["integrations", "integrations:npm"],
  "namedInputs": {
    "default": ["{projectRoot}/src/**/*", "{projectRoot}/{package.json,openapi-ts.config.mjs,tsconfig.json}"]
  },
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "inputs": ["default"],
      "options": {
        "cwd": "{projectRoot}",
        "command": "tsc -p tsconfig.json"
      },
      "outputs": ["{projectRoot}/dist/**/*"]
    },
    "generate:client": {
      "cache": true,
      "executor": "nx:run-commands",
      "inputs": ["{workspaceRoot}/packages/integrations/openapi-json/json/openapi.v3.json"],
      "options": {
        "cwd": "{projectRoot}",
        "commands": ["bun run cleanup:generated", "bunx openapi-ts"],
        "parallel": false
      },
      "outputs": ["{projectRoot}/src/http/generated/**/*"],
      "dependsOn": ["@ladesa-ro/management-service.integrations.openapi:generate"]
    },
    "generate": {
      "executor": "nx:run-commands",
      "cache": false,
      "inputs": [],
      "options": {
        "cwd": "{projectRoot}",
        "command": "nx run-many --targets=generate:client"
      },
      "dependsOn": ["@ladesa-ro/management-service.integrations.openapi:generate"]
    }
  }
}
