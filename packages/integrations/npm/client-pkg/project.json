{
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "tags": ["integrations", "integrations:npm"],
  "namedInputs": {
    "default": ["{projectRoot}/src/**/*", "{projectRoot}/{package.json,openapi-ts.config.mjs,tsconfig.json}"]
  },
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "inputs": ["default"],
      "options": {
        "cwd": "{projectRoot}",
        "command": "tsc -p tsconfig.json"
      },
      "outputs": ["{projectRoot}/dist/**/*"],
      "dependsOn": ["generate"]
    },
    "generate": {
      "cache": true,
      "executor": "nx:run-commands",
      "inputs": ["{workspaceRoot}/packages/integrations/openapi-json/json/openapi.v3.json"],
      "options": {
        "cwd": "{projectRoot}",
        "commands": ["bun run cleanup:generated", "bunx openapi-ts", "bun run --filter '@ladesa-ro/management-service.repo' code:fix"],
        "parallel": false
      },
      "outputs": ["{projectRoot}/src/http/generated/**/*"],
      "dependsOn": ["@ladesa-ro/management-service.integrations.openapi:generate"]
    }
  }
}
