{
  "name": "@ladesa-ro/management-service.application.contracts",
  "private": true,
  "scripts": {
    "build": "wireit",
    "build:quicktype": "wireit",
    "build:tsp": "wireit",
    "unit:dev": "nodemon --watch src --watch tspconfig.yaml --exec \"bun run build\" -e '*'"
  },
  "wireit": {
    "build:tsp": {
      "command": "mkdir -p dist/tsp-output && tsp compile src/main.tsp --output-dir dist/tsp-output",
      "files": ["src/**/*", "tspconfig.yaml"],
      "output": ["dist/tsp-output/**"],
      "clean": true
    },
    "build:openapi-ts": {
      "command": "mkdir -p dist/ts && openapi-typescript ./dist/tsp-output/openapi.v3.json -o ./dist/ts/schema.d.ts",
      "files": ["./dist/tsp-output/json-schema/schema.json"],
      "output": ["./dist/ts/schema.d.ts"],
      "dependencies": ["build:tsp"],
      "clean": true
    },
    "build": {
      "dependencies": ["build:tsp", "build:openapi-ts"]
    }
  },
  "exports": {
    "./openapi-v3-typings": {
      "types": "./dist/ts/schema.d.ts"
    },
    "./openapi-v3-schema": {
      "default": "./dist/tsp-output/openapi.v3.json"
    }
  },
  "devDependencies": {
    "@ladesa-ro/management-service.domain.contracts": "workspace:*",
    "@typespec/compiler": "catalog:typespec",
    "@typespec/http": "catalog:typespec",
    "@typespec/json-schema": "catalog:typespec",
    "@typespec/openapi": "catalog:typespec",
    "@typespec/openapi3": "catalog:typespec",
    "@typespec/rest": "catalog:typespec",
    "openapi-typescript": "^7.8.0",
    "quicktype": "catalog:quicktype",
    "nodemon": "catalog:development"
  }
}