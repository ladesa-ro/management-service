{
  "compilerOptions": {
    "strict": true,
    "lib": ["esnext"],
    "target": "es2022",
    "module": "NodeNext",
    "resolveJsonModule": true,
    "removeComments": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./lib",
    "paths": {
      "@/*": ["./*"],
      "@/application/#/*": ["./application/contracts/.generated/*"],
      "@/domain/#/*": ["./domain/contracts/.generated/*"]
    },
    "incremental": true,
    "skipLibCheck": true
  },
  "exclude": ["scripts"]
}
