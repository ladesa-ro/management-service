{
  "name": "@ladesa-ro/management-service.domain.contracts",
  "private": true,
  "scripts": {
    "build": "wireit",
    "build:quicktype": "wireit",
    "build:tsp": "wireit",
    "unit:dev": "nodemon --watch src --watch tspconfig.yaml --exec \"bun run build\" -e '*'"
  },
  "wireit": {
    "build:tsp": {
      "command": "mkdir -p dist/tsp-output && tsp compile src/main.tsp --output-dir dist/tsp-output",
      "files": ["src/**/*", "tspconfig.yaml"],
      "output": ["dist/tsp-output/**"],
      "clean": true
    },
    "build:quicktype": {
      "command": "mkdir -p dist/ts && quicktype --src-lang schema --src './dist/tsp-output/json-schema/schema.json#$defs/' -o './dist/ts/schema.ts' --just-types --no-nice-property-names --no-runtime-typecheck --acronym-style original",
      "files": ["./dist/tsp-output/json-schema/schema.json"],
      "output": ["./dist/ts/schema.ts"],
      "dependencies": ["build:tsp"],
      "clean": true
    },
    "build": {
      "dependencies": ["build:tsp", "build:quicktype"]
    }
  },
  "exports": {
    "./typings": {
      "types": "./dist/ts/schema.ts"
    },
    "./json-schema": {
      "default": "./dist/tsp-output/json-schema/schema.json"
    },
    ".": {
      "typespec": "./src/modules.tsp"
    }
  },
  "devDependencies": {
    "@typespec/compiler": "catalog:typespec",
    "@typespec/json-schema": "catalog:typespec",
    "quicktype": "catalog:quicktype",
    "nodemon": "catalog:development",
    "wireit": "catalog:wireit"
  }
}
