{
  "name": "@ladesa-ro/management-service.application",
  "version": "1.0.0-next.34",
  "private": true,
  "files": [
    "generated/**/*",
    "src/**/*",
    "tsconfig*.json",
    "nest-cli.json"
  ],
  "scripts": {
    "start:dev": "bun run --watch src/main.ts",
    "start:debug": "bun run --watch --inspect-wait src/main.ts",
    "start:prod": "bun run src/main.ts",
    "typeorm": "typeorm",
    "typeorm:ds-migration": "typeorm -d src/infrastructure/integrations/database/typeorm/data-sources/migration.data-source.ts",
    "typeorm:entity": "bun run typeorm entity:create",
    "typeorm:generate": "bun run typeorm migration:generate",
    "typeorm:create": "bun run typeorm migration:create",
    "migration:run": "bun run typeorm:ds-migration migration:run",
    "migration:revert": "bun run typeorm:ds-migration migration:revert",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "test:e2e": "vitest run --config ./vitest.config.e2e.ts",
    "check:static": "tsc --noEmit"
  },
  "wireit": {
    "build": {
      "dependencies": ["../application-contracts:build", "../domain-core:build"]
    },
    "unit:dev": {
      "dependencies": ["../application-contracts:unit:dev", "../domain-core:unit:dev"]
    }
  },
  "dependencies": {
    "@fastify/merge-json-schemas": "^0.2.1",
    "@ladesa-ro/management-service.application.contracts": "workspace:*",
    "@ladesa-ro/management-service.domain": "workspace:*",
    "@ladesa-ro/management-service.infrastructure": "workspace:*",
    "@nestjs/common": "catalog:nestjs",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.3",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.3",
    "@nestjs/schedule": "^5.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^6.4.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "amqplib": "^0.10.8",
    "change-case": "^5.4.4",
    "compression": "^1.8.0",
    "date-fns": "^4.1.0",
    "defu": "^6.1.4",
    "fs-jetpack": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "lodash": "^4.17.21",
    "lru-cache": "^11.1.0",
    "passport": "^0.7.0",
    "passport-http-bearer": "^1.0.1",
    "pg": "^8.16.0",
    "rascal": "^20.1.1",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.2",
    "sharp": "^0.34.2",
    "tslib": "^2.8.1",
    "tsx": "^4.20.3",
    "typeorm": "^0.3.24",
    "uuid": "^11.1.0",
    "valibot": "0.42.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.3",
    "@types/amqplib": "^0.10.7",
    "@types/bun": "^1.2.16",
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.3",
    "@types/json-schema": "^7.0.15",
    "@types/lodash": "^4.17.17",
    "@types/multer": "^1.4.13",
    "@types/passport-http-bearer": "^1.0.41",
    "@types/rascal": "^10.2.1",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "ast-types": "^0.16.1",
    "magicast": "^0.3.5",
    "pathe": "^2.0.3",
    "recast": "^0.23.11",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.1",
    "type-fest": "^4.41.0",
    "typescript": "catalog:development",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}