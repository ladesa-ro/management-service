{
  "name": "@ladesa-ro/api.service.domain.contracts",
  "scripts": {
    "generate:json-schema": "tsp compile --config ./tspconfig.yaml --output-dir ./.generated ./main.tsp",
    "generate:typescript": "quicktype --src-lang schema --src './.generated/Ladesa.ManagementService.Domain.Contracts.json#$defs/' -o './.generated/Ladesa.ManagementService.Domain.Contracts.ts' --just-types --no-nice-property-names --no-runtime-typecheck --acronym-style original",
    "generate": "bun run generate:json-schema && bun run generate:typescript"
  },
  "exports": {
    "json-schema": {
      "default": "./.generated/Ladesa.ManagementService.Domain.Contracts.json"
    },
    "typings": {
      "types": "./.generated/Ladesa.ManagementService.Domain.Contracts.ts"
    }
  },

  "devDependencies": {
    "@typespec/compiler": "^1.0.0",
    "@typespec/json-schema": "^1.0.0",
    "quicktype": "^23.2.6"
  }
}