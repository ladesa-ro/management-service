{
  "$schema": "../../../../../node_modules/nx/schemas/project-schema.json",
  "namedInputs": {
    "default": [
      "{projectRoot}/generics/**/*",
      "{projectRoot}/resources/**/*",
      "{projectRoot}/tspconfig.yml"
    ]
  },
  "targets": {
    "tsp:format": {
      "cache": false,
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "tsp format '{generics,resources}/**/*.tsp'"
        ]
      }
    },
    "tsp:generate": {
      "cache": true,
      "executor": "nx:run-commands",
      "inputs": [
        "default"
      ],
      "outputs": [
        "{projectRoot}/.generated/*.json"
      ],
      "options": {
        "cwd": "{projectRoot}",
        "commands": [
          "tsp compile --config ./tspconfig.yaml --output-dir ./.generated ./main.tsp"
        ],
        "parallel": false
      }
    }
  }
}