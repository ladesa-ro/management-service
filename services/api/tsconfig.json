{
  "compilerOptions": {
    "strict": true,

    "lib": ["esnext"],
    "target": "es2022",
    "module": "NodeNext",
    "resolveJsonModule": true,
    "removeComments": true,

    "strictNullChecks": true,
    "noImplicitAny": false,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "declaration": true,
    "sourceMap": true,

    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "~domain.contracts": ["./domain/contracts/.generated/Ladesa.ManagementService.Domain.Contracts.ts"]
    },

    "incremental": true,

    "skipLibCheck": true
  },
  "exclude": ["scripts"]
}
